    <% coordinates.each do |coordinate| %>
      <div class='mt-3 flashcard js-flashcard-hidden' id='flashcard<%= coordinate.id %>'>
        <div>
          <strong>Question: <%= coordinate.flashcard.question %></strong>
        </div>
        <% if coordinate.student_answer.present? %>
          <p></p>
          <p><strong>Réponse:  </strong><%= coordinate.flashcard.answer %></p>
          <p><strong>Ta réponse:  </strong><%= coordinate.student_answer %></p>
        <% else %>
          <div>
            <%= simple_form_for coordinate, remote: true do |f| %>
              <p></p>
              <%= f.input :student_answer, label: false, placeholder: 'Entre ta réponse ici...' %>
              <%= f.button :submit, class: 'btn btn-flashcard', value: 'Réponse' %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>








