<h1>Ma discussion avec <%= @chatroom.teacher.first_name %></h1>

<% if !@chatroom.messages.nil?  %>
  <div class="content-evaluation">
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <div class="message-container">
          <i class="author">
          <span><%= message.user.first_name%></span>
          <small><%= I18n.l(message.created_at, format: :date, locale: :fr).capitalize %><%= message.created_at.strftime("%H:%M")%></small>
          </i>
          <p><%= message.content %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="my-2">
<%= simple_form_for [ @chatroom, @message ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Mon message" %>
<% end %>
</div>
